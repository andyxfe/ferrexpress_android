<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC362E"
    tools:context="com.diseño.myapplicationferrexpress.LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/contenedor"
        android:layout_width="380dp"
        android:layout_height="800dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/herramienta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="FerrexPress"
                android:textColor="#D50000"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="300dp"
            android:text="registro"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="ingresa tu nombre" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="nombre"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="40dp" />

                <TextView
                    android:id="@+id/errornombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este campo es obligatorio"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingBottom="5dp"
                    android:text="ingresa tu apellido" />

                <EditText
                    android:id="@+id/apellido"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="apellido"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="40dp"/>

                <TextView
                    android:id="@+id/errorapellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Este campo es obligatorio"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu cedula"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"/>

            <EditText
                android:id="@+id/cedula"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:background="@drawable/borde_edittext"
                android:hint="cedula"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="40dp"/>

            <TextView
                android:id="@+id/errorcedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este campo es obligatorio"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingStart="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu fecha de nacimiento"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"/>


            <EditText
                android:id="@+id/fechanacimiento"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:background="@drawable/borde_edittext"
                android:focusable="false"
                android:hint="Selecciona una fecha"
                android:inputType="none"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="40dp" />

            <TextView
                android:id="@+id/errorfechanacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este campo es obligatorio"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu correo"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/borde_edittext"
                android:hint="email"
                android:importantForAutofill="yes"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="40dp"/>

            <TextView
                android:id="@+id/erroremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este campo es obligatorio"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu contraseña"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"/>


            <EditText
                android:id="@+id/contraseña"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:background="@drawable/borde_edittext"
                android:fontFamily="sans-serif"
                android:hint="contraseña"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="40dp"/>

            <TextView
                android:id="@+id/errorcontraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este campo es obligatorio"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:visibility="gone"
                android:paddingStart="10dp"/>

            <Button
                android:id="@+id/botonregistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="registrar"
                android:textStyle="bold"
                android:textSize="30sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/bordeboton"
                android:layout_marginStart="70dp"
                android:layout_marginTop="100dp"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>