<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC362E"
    tools:context="com.dise単o.myapplicationferrexpress.LoginActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/contenedor"
        android:layout_width="350dp"
        android:layout_height="800dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="800dp"
            android:gravity="start"
            android:orientation="vertical">




        </LinearLayout>

        <LinearLayout
                android:id="@+id/logo"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/herramienta" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="FerrexPress"
                    android:textColor="#D50000"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/contenedor"
                app:layout_constraintBottom_toBottomOf="@id/contenedor"
                app:layout_constraintStart_toStartOf="@id/contenedor"
                app:layout_constraintEnd_toEndOf="@id/contenedor">


            </LinearLayout>

        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="190dp"
            android:text="inicar sesion "
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu correo"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"/>



                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/borde_edittext"
                    android:hint="correo"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="40dp"

                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ingresa tu contrase単a"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"/>



            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:autofillHints="password"
                android:background="@drawable/borde_edittext"
                android:hint="contrase単a"
                android:importantForAutofill="yes"
                android:inputType="textPassword"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:paddingStart="5dp"
                android:paddingEnd="40dp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="inicar sesion"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/bordeboton"
                android:layout_marginStart="90dp"
                android:layout_marginTop="60dp"/>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginStart="45dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="no tienes cuenta"
                android:layout_marginTop="30dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"/>

                 <TextView
                     android:id="@+id/registro"
                     android:layout_width="150dp"
                     android:layout_height="wrap_content"
                     android:text="registrate aqui"
                     android:textColor="#DC362E"
                     android:layout_marginTop="30dp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                >

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="olvidaste tu contrase単a"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="restablecer"
                    android:textColor="#DC362E"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"/>



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>